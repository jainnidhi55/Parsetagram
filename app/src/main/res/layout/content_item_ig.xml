<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".item_ig"
    tools:showIn="@layout/activity_item_ig">

    <ImageView
        android:id="@+id/iv_IGpic"
        android:layout_width="331dp"
        android:layout_height="326dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_IGdescrip"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/iv_IGpic"
        android:layout_below="@+id/iv_dateDetails"
        android:layout_marginTop="-103dp"
        android:paddingTop="5dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/iv_dateDetails"
        android:layout_width="331dp"
        android:layout_height="27dp"
        android:layout_alignStart="@id/iv_IGpic"
        android:layout_below="@id/iv_like"
        android:layout_marginBottom="103dp"
        android:paddingTop="5dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="305dp"
        android:layout_height="27dp"
        android:layout_above="@+id/iv_IGpic"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-65dp"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark" />

    <View
        android:id="@+id/grayLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/tv_IGdescrip"
        android:layout_marginTop="7dp"/>

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/iv_IGpic"
        android:layout_below="@id/iv_IGpic"
        app:srcCompat="@drawable/ufi_heart"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/iv_comm"
        android:layout_width="37dp"
        android:layout_height="31dp"
        android:layout_below="@+id/iv_IGpic"
        android:layout_toEndOf="@+id/iv_like"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/ufi_comment" />

    <ImageView
        android:id="@+id/iv_send"
        android:layout_width="36dp"
        android:layout_height="31dp"
        android:layout_below="@+id/iv_IGpic"
        android:layout_toEndOf="@+id/iv_comm"
        android:layout_marginTop="3dp"
        app:srcCompat="@drawable/direct" />

    <ImageView
        android:id="@+id/iv_profpic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/iv_IGpic"
        android:layout_alignStart="@+id/iv_IGpic"
        android:layout_marginBottom="-65dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        app:srcCompat="@android:color/holo_blue_bright" />
</RelativeLayout>